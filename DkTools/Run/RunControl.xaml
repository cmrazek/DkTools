<UserControl x:Class="DkTools.Run.RunControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DkTools.Run"
             mc:Ignorable="d" 
             d:DesignWidth="400" d:DesignHeight="500"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ItemsControl ItemsSource="{Binding RunItems}" Grid.Row="0">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:RunItem}">
                    <local:RunItemControl/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="4,4,4,4">
            <Button Name="AddRunItemButton" Content="Add" Width="60"/>
        </StackPanel>
    </Grid>
</UserControl>
